<div class="d-flex justify-content-end">
    <div class="col">
        <input class="form-control" type="text" placeholder="Search Gym">
        <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown"
                aria-expanded="false">
                Sort by
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="#">Rating(High to Low)</a></li>
                <li><a class="dropdown-item" href="#">Rating(Low to High)</a></li>
                <li><a class="dropdown-item" href="#">Category</a></li>
            </ul>
        </div>
    </div>
</div>


{{!-- updated to make dynamic title data --}}
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    {{#each gymsList}}
    <div class="col">
        <a href="/gym/{{_id}}" class="card-link">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">{{gymName}}</h5>

                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            {{#each category}}
                            <span class="badge rounded-pill text-bg-secondary">{{.}}</span>
                            {{/each}}
                        </div>
                        <div>
                            {{{showRating rating}}}
                            <small class="text-body-secondary">{{rating}}</small>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </div>

    {{/each}}
</div>
