<main>
    <div class="d-flex justify-content-end">
        <div class="col">
            <input class="form-control" type="text" placeholder="Search Gym">
            <div class="dropdown">
                <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown"
                        aria-expanded="false">
                    Sort by
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" onclick="sortRatingHighToLow()">Rating(High to Low)</a></li>
                    <li><a class="dropdown-item" onclick="sortRatingLowToHigh()">Rating(Low to High)</a></li>
                </ul>
                <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown"
                        aria-expanded="false">
                    Filter
                </button>
                <ul class="dropdown-menu">
                    <li><label><input type="checkbox" class="filter-option" value="Membership Gym" checked> Membership Gym</label></li>
                    <li><label><input type="checkbox" class="filter-option" value="24 hour access gym" checked> 24 hour access gym</label></li>
                    <li><label><input type="checkbox" class="filter-option" value="CrossFit" checked> CrossFit</label></li>
                    <li><label><input type="checkbox" class="filter-option" value="Boot Camps" checked> Boot Camps</label></li>
                    <li><label><input type="checkbox" class="filter-option" value="Training gyms" checked> Training gyms</label></li>
                </ul>
            </div>
        </div>
    </div>


    {{!-- updated to make dynamic title data --}}
    <div class="gymList row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        {{#each gymsList}}
            <div class="col">
                <a href="/gym/{{_id}}" class="card-link">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">{{gymName}}</h5>

                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <span class="badge rounded-pill text-bg-secondary">{{category}}</span>
                                </div>
                                <div>
                                    {{{showRating rating}}}
                                    <small class="text-body-secondary">{{rating}}</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        {{/each}}
    </div>
    <script src="/public/js/gymSorting.js"></script>
</main>
