<main>
    <form action="/gym/add" id="gym-form" method="POST">
        <div class="form-group">
            <label for="gymName">Gym Name</label>
            <input type="text" class="form-control" id="gymName" placeholder="Gym Name" name="gymName" required>
        </div>
        <div class="form-group">
            <label for="website">Website</label>
            <input type="url" class="form-control" id="website" placeholder="Website" name="website" required>
        </div>
        <div class="form-group">
            <label for="category">Category</label>
            <select class="form-control" id="category" name="category" required>
                <option value="Membership Gym">Membership Gym</option>
                <option value="24 hour access gym">24 hour access gym</option>
                <option value="CrossFit">CrossFit</option>
                <option value="Boot Camps">Boot Camps</option>
                <option value="Training gyms">Training gyms</option>
            </select>
        </div>
        <div class="form-group">
            <label for="address">Address</label>
            <input type="text" class="form-control" id="address" placeholder="Address" name="address" required>
        </div>
        <div class="form-group">
            <label for="city">City</label>
            <input type="text" class="form-control" id="city" placeholder="City" name="city" value="Hoboken" readonly>
        </div>
        <div class="form-group">
            <label for="state">State</label>
            <input type="text" class="form-control" id="state" placeholder="State" name="state" value="NJ" readonly>
        </div>
        <div class="form-group">
            <label for="zip">ZIP Code</label>
            <input type="text" class="form-control" id="zip" pattern="[0-9]{5}" placeholder="ZIP Code" name="zip" required/>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

    {{!-- updated to make dynamic title data --}}
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <p><h2>Gym List</h2></p>
        {{#each gymsList}}
        <div class="col">
            <a href="/gym/edit/{{_id}}" class="card-link">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">{{gymName}}</h5>

                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                {{#each category}}
                                <span class="badge rounded-pill text-bg-secondary">{{.}}</span>
                                {{/each}}
                            </div>
                            <div>
                                <small class="text-body-secondary">{{rating}}</small>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        {{/each}}
    </div>
</main>