<main>
    <form action="/comment/delete/{{gymId}}/{{commentId}}" _method="DELETE">
        <div class="form-group">
            <label for="commentContent">For the gym: {{{gym.gymName}}}</label>
            <br>
            <label for="commentContent">under the review: {{{review.content}}}</label>
            <br>
            <label for="commentContent">Your Comment:</label> {{{comment.content}}}
        </div>
        <button type="submit" class="btn btn-outline-primary me-2">Delete Comment</button>
    </form>
    <br>
    <button type="cancel" onclick="location.href='/gym/{{gym._id}}';" class="btn btn-primary">Cancel</button>

</main>