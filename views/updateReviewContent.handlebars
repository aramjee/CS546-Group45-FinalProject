<main>
    <form action="/review/updateContent/{{gym._id}}/{{review._id}}" id="updateReview-form" method="POST">
        <div class="form-group">
            <label for="reviewContent">Update Review for {{{gym.gymName}}}:</label>
            <textarea class="form-control" id="reviewContent" name="content"
                placeholder='{{{review.content}}}'>{{{review.content}}}</textarea>
        </div>
        <br>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <br>
    <button type="submit" onclick="location.href='/gym/{{gym._id}}';" class="btn btn-primary">Cancel</button>
    <div>
        {{#if hasError}}
        <div class="error">
            <ul>
                {{#each error}}
                <li>
                    {{this}}
                </li>
                {{/each}}
            </ul>
        </div>
        {{/if}}
    </div>
</main>