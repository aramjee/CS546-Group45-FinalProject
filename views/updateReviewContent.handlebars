<main>
    <form action="/review/updateContent/{{gym._id}}/{{review._id}}" id="updateReviewContent-form" method="POST">
        <div class="form-group">
            <label for="content">Update Review for {{{gym.gymName}}}:</label>
            <textarea class="form-control" id="content" name="content" placeholder='{{{review.content}}}'
                required>{{{review.content}}}</textarea>
        </div>
        <br>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <br>
    <button type="submit" onclick="location.href='/gym/{{gym._id}}';" class="btn btn-primary">Cancel</button>

</main>