<main>
    <form action="/review/updateRating/{{gym._id}}/{{review._id}}" _method="PUT">
        <div class="form-group">
            <label for="rating">Update Rating for {{{gym.gymName}}}:</label>
            <br>
            <input type="number" id="rating" name="rating" min="1" max="5" placeholder='{{{review.rating}}}'>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <br>
    <button type="cancel" onclick="location.href='/gym/{{gym._id}}';" class="btn btn-primary">Cancel</button>
</main>