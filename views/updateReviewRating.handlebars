<main>
    <form action="/review/updateRating/{{reviewId}}" method="PUT">
        <div class="form-group">
            <label for="rating">New Rating</label>
            <input type="number" id="rating" name="rating" min="1" max="5" placeholder='{{{review.rating}}}'>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</main>