<div class="row">
    <div class="col">
        {{!-- Change this to title of gym when available --}}
        <h2>{{gym.gymName}}</h2>
        {{#if userLoggedIn}}
        <div class="pull-right">
            <form id="AddToFavorites" method="POST" action="/gym/{{gym._id}}/addFav/">
                <button type="submit" value="Add to Favorites" class="btn btn-sm btn-primary">Add
                    to Favorites</button>
            </form>

            <input type="button" onclick="location.href = '/review/new/{{gym._id}}'" ; value="Post a New Review"
                class="btn btn-sm btn-dark" />
        </div>
        {{/if}}
        <div>
            {{#each gym.category}}
            <span class="badge rounded-pill text-bg-secondary">{{.}}</span>
            {{/each}}
        </div>
        <div>
            <span class="bold">Average Rating:</span> {{{showRating gym.rating}}} {{gym.rating}}
        </div>
        <div>
            <div><span class="bold">Address:</span> {{gym.address}}</div>
            <div><span class="bold">Website:</span> {{gym.website}}</div>
        </div>
        <div>
            <form id="LikeGym" method="POST" action="/gym//{{gym._id}}/like" {{#unless
                userLoggedIn}}disabled{{/unless}}>
                <button type="submit" class="btnLikeGym btn btn-sm btn-success">
                    Like ({{gym.likedGymsCnt}})</button>
            </form>
            <form id="dislikeGym" method="POST" action="/gym//{{gym._id}}/dislike" {{#unless
                userLoggedIn}}disabled{{/unless}}>
                <button type="submit" class="btnDislikeGym btn btn-sm btn-danger">Dislike
                    ({{gym.dislikedGymsCnt}})</button>
            </form>
        </div>
    </div>
</div>
<hr>
<div class="row">
    <div class="col">
        {{#each gym.reviews}}
        <div class="card review-card">
            <div class="card-body">
                <div>
                    <span class="username bold">{{userName}}</span> <span class="italic">{{dateOfReview}}</span>
                    {{!-- Removed if condition temporarily, will update for logic later --}}
                    <div class="pull-right edit-delete-wrapper">
                        <input type="button" value="Edit content"
                            onclick="location.href = '/review/updateContent/{{gymId}}/{{_id}}'"
                            class="btn btn-sm btn-outline-dark" />
                        <input type="button" value="Update rating"
                            onclick="location.href = '/review/updateRating/{{gymId}}/{{_id}}'"
                            class="btn btn-sm btn-outline-dark" />
                        <input type="button" value="Delete" onclick="location.href = '/review/delete/{{gymId}}/{{_id}}'"
                            class="btn btn-sm btn-outline-danger" />

                    </div>


                    {{#if ../userLoggedIn}}
                    <input type="button" value="Respond with a comment" onclick="location.href = '/comment/new/{{_id}}'"
                        class="btn btn-sm btn-outline-primary pull-right" />
                    {{/if}}
                </div>
                <div>
                    <span class="bold">User Rating:</span> {{{showRating rating}}} {{rating}}
                </div>
                <div>
                    <span class="bold">Review:</span> {{content}}
                </div><br />
                <p><span class="bold">Comments:</span></p>
                {{#each comments}}
                <div class="card comment-box">
                    <div class="card-body">
                        <p>
                            <span class="username bold">{{userName}}</span>
                            {{!-- Removed if currentUser condition temporarily, will update for logic later --}}
                            <span class="pull-right edit-delete-wrapper">
                                <input type="button" value="Edit content"
                                    onclick="location.href = '/comment/update/{{reviewId}}/{{_id}}'"
                                    class="btn btn-sm btn-outline-dark" />
                                <input type="button" value="Delete"
                                    onclick="location.href = '/comment/delete/{{reviewId}}/{{_id}}'"
                                    class="btn btn-sm btn-outline-danger" />
                            </span>

                        </p>
                        <p>{{content}}</p>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
        <hr>
        {{/each}}
    </div>
</div>